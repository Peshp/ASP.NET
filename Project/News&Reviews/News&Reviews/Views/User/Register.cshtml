@using News_Reviews.Models.UserModels;
@model RegisterViewModel

@{
    ViewData["HideFooter"] = "true";
}

<div class="container">
    <div class="col-md-2">
        <h2 class="text-white">Register</h2>
        <form>
            <div class="form-group">
                <input type="text" class="form-control form-control-lg text-light" id="username" placeholder="Enter username" style="background-color: transparent; border: #fff; border-bottom: 1px solid #fff; padding: 5px; width: 300px;">
            </div>
            <div class="form-group">
                <input type="password" class="form-control form-control-lg text-light" id="password" placeholder="Enter password" style="background-color: transparent; color: #fff; border: none; border-bottom: 1px solid #fff; padding: 5px; width: 300px">
            </div>
            <div class="form-group">
                <input type="password" class="form-control form-control-lg text-light" id="confirm-password" placeholder="Confirm password" style="background-color: transparent; color: #fff; border: none; border-bottom: 1px solid #fff; padding: 5px; width: 300px">
            </div>
            <button type="submit" class="btn btn-lg btn-block border text-light">Register</button>

            <style>
                .btn:hover {
                    background-color: purple;
                    color: white;
                }
            </style>

        </form>
    </div>
</div>




