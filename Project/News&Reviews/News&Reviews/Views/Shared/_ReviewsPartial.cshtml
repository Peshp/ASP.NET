<div class="card" style="width:400px">
    <img class="card-img-top" src="@Model.ImageURL" alt="Card image">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p>@Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Content.Substring(0, Model.Content.IndexOf('.') + 1)))</p>
        <a asp-controller="Reviews" asp-action="Read" asp-route-id="review.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Read</a>
    </div>
</div>
