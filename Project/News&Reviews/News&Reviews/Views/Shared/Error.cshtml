@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="error-title">Error</h1>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: transparent;
        text-align: center;
    }

    .error-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 40px;
        border-radius: 8px;
        background-color: transparent;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .error-title {
        font-size: 32px;
        font-weight: bold;
        color: #f44336;
        margin-bottom: 10px;
        padding: 10px;
    }

    .error-message {
        font-size: 25px;
        color: #f44336;
        margin-bottom: 20px;
    }

    .error-request-id {
        font-size: 16px;
        color: #777;
        margin-bottom: 20px;
    }

    .error-development-mode {
        font-size: 16px;
        color: #777;
    }

        .error-development-mode strong {
            color: #f44336;
        }
</style>

<div class="error-container">
    <h2 class="error-message">An error occurred while processing your request.</h2>
</div>
