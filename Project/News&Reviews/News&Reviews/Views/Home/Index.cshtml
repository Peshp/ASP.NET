<div style="width: 100%; height: 50%; position: relative;">
    <img src="https://assets-prd.ignimgs.com/2021/12/30/36190303-image-7-1640880187142.png"
         alt="Image" style="width: 100%; height: 100%; object-fit: cover;">

    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7);">
        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; color: white; padding: 20px;">
            <h1 style="font-size: 56px;">News&Reviews</h1>
            <p style="font-size: 24px; font-family: 'Times New Roman', Times, serif, sans-serif;">
                Where you can find recently news and reviews for your favorite games</p>
        </div>
    </div>
</div>



<style>
    body {
        background-color: black;
    }

    .card {
        background-color: transparent;
        border: none;
        margin-bottom: 30px;
    }

        .card:hover {
            transform: scale(1.05);
        }

    h1 {
        color: cyan;
        padding: 25px;
        padding-bottom: 25px;
        font-family: 'Times New Roman', Times, serif, sans-serif;
        font-weight: bold;
    }

    .big-card {
        background-color: transparent;
        border: none;
        margin-bottom: 30px;
        position: relative;
        transition: transform 0.3s ease;
    }

        .big-card:hover {
            transform: scale(1.05);
        }

        .big-card .card-body {
            padding: 20px;
        }

        .big-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .big-card .card-title a {
            color: inherit;
            text-decoration: none;
            font-size: 20px;
            font-weight: bold;
        }

        .big-card::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            z-index: -1;
        }

    .big-card-link {
        text-decoration: none;
    }
</style>


<h1>Reviews</h1>
<div class="row">
    @foreach (var review in ViewBag.Reviews)
    {
        string[] sentences = review.Content.Split('.');
        string firstTwoSentences = string.Join(".", sentences.Take(1));

        <div class="col-md-4">
            <a asp-controller="Reviews" asp-action="Read" asp-route-id="@review.Id" class="card-link">
                <div class="big-card">
                    <a asp-controller="Reviews" asp-action="Read" asp-route-id="@review.Id" class="big-card-link">
                        <div class="card w-100">
                            <img src="@review.ImageURL" class="img-fluid" alt="@review.ImageURL">
                            <div class="card-body">
                                <h3 class="card-title" style="color: cyan; padding-top: 25px;">@review.Title</h3>
                                <p class="card-text" style="color: white;">@firstTwoSentences</p>
                                <p class="card-text">Publisher: @review.Publisher</p>
                                <p class="card-text">Genre: @review.Genre</p>
                                <p class="card-text">Platform: @review.Platform</p>
                            </div>
                        </div>
                    </a>
                </div>
            </a>
        </div>
    }
    <div class="d-flex justify-content-center">       
        <a asp-controller="Reviews" asp-action="All" class="text-primary"><h1>See all reviews</h1></a>
    </div>
</div>

<style>
    .card {
        background-color: transparent;
        color: cyan;
        border: 2px solid #6693F5;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-link {
        text-decoration: none;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <h1>Recently News</h1>
        @foreach (var news in ViewBag.News)
        {
            string[] words = news.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries);
            string firstTwentyOneWords = string.Join(" ", words.Take(15));
            <div class="col-md-3">
                <a asp-controller="News" asp-action="Read" asp-route-id="@news.Id" class="card-link">
                    <div class="card" style="width: 300px;">
                        <div class="card-body">
                            <h4 class="card-title" style="padding-bottom: 16px;">@news.Title</h4>
                            <p class="card-text" style="color: white;">@firstTwentyOneWords</p>
                            <p>Date: @news.Data</p>
                        </div>
                    </div>
                </a>
            </div>
        }
        <div class="d-flex justify-content-center">
            <a asp-controller="News" asp-action="All" class="text-primary"><h1>See all news</h1></a>
        </div>
    </div>
</div>
